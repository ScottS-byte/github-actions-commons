resource "local_file" "tf-dotenv" {
  filename = format("%s/%s", abspath(path.root), "tf.env")
  content  = <<-EOT
#### EC2 values
AWS_INSTANCE_URL="${aws_instance_url_string}"
#### EFS
HOST_DIR="$${var.app_install_root}/$${var.app_repo_name}/${host_dir_string}"
TARGET_DIR="${target_dir_string}"
EOT
}